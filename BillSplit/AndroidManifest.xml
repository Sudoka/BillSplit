<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.billsplit"
    android:versionCode="1"
    android:versionName="1.0" >
  <supports-screens android:xlargeScreens="true"
                    android:largeScreens="true"
                    android:normalScreens="true"
                    android:smallScreens="true" />
  <uses-feature android:name="android.hardware.camera.autofocus" />
  <uses-feature android:name="android.hardware.camera.flash" android:required="false" />
  <uses-feature android:name="android.hardware.camera"/>
  <uses-feature android:name="android.hardware.screen.landscape"/>
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />
  <uses-permission android:name="android.permission.CAMERA"/>
  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="billsplit.ui.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="billsplit.ui.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="billsplit.ui.EventsActivity"
            android:label="@string/title_activity_events" >
        </activity>
        <activity
            android:name="billsplit.ui.TutorialActivity"
            android:label="@string/title_activity_tutorial"
            android:parentActivityName="billsplit.ui.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.billsplit.LoginActivity" />
        </activity>
        <activity
            android:name="billsplit.ui.EventsListFragment"
            android:label="@string/title_activity_events_list_fragment" >
        </activity>
        <activity
            android:name="billsplit.ui.EventMainActivity"
            android:label="@string/title_activity_event_main"
            android:parentActivityName="billsplit.ui.EventsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.billsplit.EventsActivity" />
        </activity>
        <activity
            android:name="billsplit.ui.Blank"
            android:label="@string/title_activity_blank" >
        </activity>
        <activity
            android:name="billsplit.ui.BogusActivity"
            android:label="@string/title_activity_bogus" >
        </activity>
        <activity
            android:name="billsplit.ui.TransactionActivity"
            android:label="@string/title_activity_transaction"
            android:parentActivityName="billsplit.ui.EventMainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.billsplit.EventMainActivity" />
        </activity>
    <activity android:name="edu.sfsu.cs.orange.ocr.CaptureActivity"
              android:screenOrientation="landscape"
              android:configChanges="orientation|keyboardHidden|screenSize"
              android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
              android:windowSoftInputMode="stateAlwaysHidden"              
              >
      </activity>
    <activity android:name="edu.sfsu.cs.orange.ocr.HelpActivity"
              android:screenOrientation="user">
      <intent-filter>
        <action android:name="android.intent.action.VIEW"/>
        <category android:name="android.intent.category.DEFAULT"/>
      </intent-filter>
    </activity>
    
    <activity android:name="edu.sfsu.cs.orange.ocr.PreferencesActivity" />

    </application>

</manifest>